<!DOCTYPE html>
<html>
  <head>
    <title>DevExercise</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="flashes">
      <% if flash[:success] %>
        <p class="flash--success"><%= flash[:success] %></p>
      <% end %>

      <% if flash[:alert] %>
        <p class="flash--alert"><%= alert %></p>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
